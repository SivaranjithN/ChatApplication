<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ChatAppMAUI.View.MenuPopUp"
             Size="200, 250">
    
    
    <Frame BackgroundColor="White" CornerRadius="5" HasShadow="True" Padding="0">
        <VerticalStackLayout>
            <!-- Each Label is a menu item -->
            <Label Text="New group" Padding="10" FontSize="Small" />
            <BoxView HeightRequest="1" BackgroundColor="Gray" />
            <Label Text="New broadcast" Padding="10" FontSize="Small" />
            <BoxView HeightRequest="1" BackgroundColor="Gray" />
            <Label Text="WhatsApp Web" Padding="10" FontSize="Small" />
            <BoxView HeightRequest="1" BackgroundColor="Gray" />
            <Label Text="Status" Padding="10" FontSize="Small" />
            <BoxView HeightRequest="1" BackgroundColor="Gray" />
            <Label Text="Settings" Padding="10" FontSize="Small" />
            
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>